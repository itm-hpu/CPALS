<Window x:Class="ScheduleManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScheduleManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtDeliveryTime" HorizontalAlignment="Left" Height="23" Margin="99,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49"/>
        <Label Content="DeliveryTime" HorizontalAlignment="Left" Margin="22,10,0,0" VerticalAlignment="Top" Width="77"/>
        <Label Content="FromLocation" HorizontalAlignment="Left" Margin="151,10,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="txtFromLocation" HorizontalAlignment="Left" Height="23" Margin="233,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49"/>
        <Label Content="ToLocation" HorizontalAlignment="Left" Margin="286,10,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name="txtToLocation" HorizontalAlignment="Left" Height="23" Margin="353,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49"/>
        <Label Content="Deviation" HorizontalAlignment="Left" Margin="407,10,0,0" VerticalAlignment="Top" Width="66"/>
        <TextBox x:Name="txtDeviation" HorizontalAlignment="Left" Height="23" Margin="467,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49"/>
        <Button x:Name="btnAddTask" Content="Add Task" HorizontalAlignment="Left" Margin="535,10,0,0" VerticalAlignment="Top" Width="120" Height="26" Click="BtnAddTask_Click"/>
        <TextBox x:Name="txtLogisticsTasks" HorizontalAlignment="Left" Height="85" Margin="18,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="637"/>
        <TextBox x:Name="txtTotalNumTasks" HorizontalAlignment="Left" Height="23" Margin="147,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"/>
        <Label Content="Total Number of Tasks" HorizontalAlignment="Left" Margin="18,148,0,0" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtTimeLength" HorizontalAlignment="Left" Height="23" Margin="296,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"/>
        <Label Content="Time Length" HorizontalAlignment="Left" Margin="217,148,0,0" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="btnCreateSchedule" Content="Create Schedule" HorizontalAlignment="Left" Margin="535,148,0,0" VerticalAlignment="Top" Width="120" Height="26" Click="BtnCreateSchedule_Click"/>

    </Grid>
</Window>
